<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppEditText">
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:textColorHint">@color/gray_400</item>
        <item name="android:background">@drawable/selector_text_input_background</item>
        <item name="paddingEnd">14dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
    </style>

    <style name="AppEditText.S16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppEditText.S14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppButtonPrimary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/selector_button_background</item>
        <item name="android:textColor">@color/selector_button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppButtonText">
        <item name="android:textColor">@color/selector_button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTextLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTextLabel.S16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTextLabel.S14">
        <item name="android:textSize">14sp</item>
    </style>
</resources>